{% extends 'base.html.twig' %}

{% block title %}
    Formulaire de Contact
{% endblock %}

{% block body %}
    <h1>
        Formulaire de contact
    </h1>

    {{ form_start(form) }}
    <div class="row">
        <div class="col-sm">
            {{ form_row(form.name) }}
        </div>
        <div class="col-sm">
            {{ form_row(form.email) }}
        </div>
        <div class="col-sm">
            {{ form_row(form.service) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
